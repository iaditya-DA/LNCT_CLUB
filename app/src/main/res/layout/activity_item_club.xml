<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical"
    android:background="@drawable/rounded_button_bg"
    android:backgroundTint="#d9d9d9"
    android:layout_marginTop="8dp">

    <ImageView
        android:id="@+id/clubIconImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_club"
        android:contentDescription="Club Icon" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/clubNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Tech Club" />

        <TextView
            android:id="@+id/membersCountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#888888"
            android:textSize="14sp"
            tools:text="150 Members" />
    </LinearLayout>

    <Button
        android:id="@+id/viewButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#af4c0f"
        android:text="View"
        android:textColor="@android:color/white"
        android:paddingHorizontal="24dp"
        android:paddingVertical="8dp" />
</LinearLayout>
